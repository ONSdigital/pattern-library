<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title>{% block page_title %}{% endblock %} - Office of National Statistics</title>
  {% include 'global/head' %}
  {% block custom_head %}{% endblock %}
</head>
<body class="{% block pageclass %}{% endblock %}">

<a class="skiplink visuallyhidden focusable" href="#main" tabindex="0">
  <span>Skip to main content</span>
</a>

{% block masthead %}{% endblock %}

{% include 'components/global-header' %}

<!-- Lets main element be focused by JS and hash URIs, to avoid bug in IE and
     Chrome where using the skip to main content link will not actually shift
     the tab focus to the correct element -->
<main id="main" role="main" tabindex="-1">

  {% block content %}{% endblock %}

</main>

{% include 'components/global-footer' %}

{% include 'global/scripts' %}
{% block custom_scripts %}{% endblock %}

</body>
</html>
