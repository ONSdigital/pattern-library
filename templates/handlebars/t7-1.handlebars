<head>
		<link rel="stylesheet" href="../../node_modules/ONS-Pattern-Library/dist/css/main.min.css"/>
  	<script src="../../node_modules/ONS-Pattern-Library/dist/js/header.js"></script>
</head>

<!-- Pattern Library Header -->
<p>Add header partial</p>

<div class="page-header slate slate--red">
	<div class="wrapper">
		<p>Add breadcrumb partial</p>
	  <p class="page-header__title">
			<strong>Quality and methodology information</strong>
		</p>
		<h1 class="page-header__title flush--half--bottom">{{name}}</h1>
		<div class="grid-wrap">
				<p class="grid-col tablet-grid-one-quarter">
						<span>Contact: </span><br/>{{contact.email}}
				</p>
				<p class="grid-col tablet-grid-one-quarter divider--border-left">
						<span>Last revised: </span><br/>{{lastRevised}}
				</p>
				<p class="grid-col tablet-grid-one-half divider--border-left">
						<a href="{{download.uri}}"><span class="icon icon-download"></span>{{download.title}}</a> ({{download.size}})
				</p>
		</div>
		<p>Methodology background<p>
			<div class="grid-wrap">
				<p class="grid-col tablet-grid-one-quarter page-header__meta-block-with-img">
						<img src="http://alpha.ons.gov.uk/ui/img/national-statistics.png" alt="" /><span>Survey name: </span><br/>{{details.survey}}
				</p>
				<p class="grid-col tablet-grid-one-quarter divider--border-left">
						<span>Frequency: </span><br/>{{details.frequency}}
				</p>
				<p class="grid-col tablet-grid-one-quarter divider--border-left">
						<span>How compiled: </span><br/>{{details.dataSource}}
				</p>
				<p class="grid-col tablet-grid-one-quarter divider--border-left">
						<span>Graphical coverage: </span><br/>{{details.coverage}}
				</p>
			</div>
		<p>Add social icons partial</p>
	</div>
</div>
<!-- /page-header 'slate' -->
<div class="wrapper panel--mar">
	<div class="grid-wrap">
		<div class="grid-col desktop-grid-two-thirds">
			<h2>Executive summary</h2>
			<p>
				{{summary}}
			</p>
		</div>
		<!-- /grid-two-thirds -->
		<div class="grid-col desktop-grid-one-third">
			<article class="box solid box--teal--separated--left">
				<div class="box__inner border box--padded">
					<header>
						<h3 class="box__section__header">
								This methodolgy is used for
						</h3>
					</header>
					<!-- /box__header -->
					<div class="box__content">
						<ul class="list--neutral">
							{{#each usedIn}}
							<li><a href="{{uri}}">{{title}}</a></li>
							{{/each}}
						</ul>
					</div>
					<!-- /box__content -->
				</div>
				<!-- /box__inner -->
			</article>
			<!-- /box -->
			<article class="box box--padded sectioned">
				<h3 class="box__section__header">
						Contact details for this methodology
				</h3>
				</header>
				<!-- /box__header -->
				<div class="box__content">
					<p>
						{{contact.name}}<br/>
						<a href="mailto:{{contact.email}}">{{contact.email}}</a><br/>
						{{contact.telephone}}
					</p>
				</div>
				<!-- /box__content -->
			</article>
			<!-- /box -->
		</div>
		<!-- /desktop-grid-one-third -->
	</div>
	<!-- /grid-wrap -->
	<div class="grid-wrap">
		<div class="grid-col desktop-grid-one-third">
			<article class="box solid box--purple--separated--left">
				<div class="box__inner border box--padded">
					<h3 class="box__section__header">
							Download this methodology
					</h3>
					<!-- /box__header -->
					<div class="box__content">
						<a href="{{download.uri}}">{{download.title}}</a> ({{download.size}})
					</div>
					<!-- /box__content -->
				</div>
				<!-- /box__inner -->
			</article>
			<!-- /box -->
		</div>
		<!-- /desktop-grid-one-third -->
	</div>
	<!-- /grid-wrap -->
</div>


<p>
	Add footer partial
</p>

<script src="../../node_modules/ONS-Pattern-Library/dist/js/footer.js"></script>
