                  <option value="2006">2006</option>
                  <option value="2007">2007</option>
                  <option value="2008">2008</option>
                  <option value="2009">2009</option>
                  <option value="2010">2010</option>
                  <option value="2011">2011</option>
                  <option value="2012">2012</option>
                  <option value="2013">2013</option>
                  <option value="2014" selected>2014</option>
                </select>
              </fieldset>
            </div>
            <div class="chart-area__controls__submit">
              <input class="btn btn--small btn--thin btn--narrow btn--primary" type="submit" name="submit"
                     data-chart-controls-submit value="Show">
            </div>
          </div>
        </div>
      </form>
    </div>
    <!-- /chart-area__controls -->

    <!-- The actual chart goes here.  In this example, it is represented as an image that -->
    <!-- on a production site would be the no-js fallback, that is generated dynamically  -->
    <!-- by the server.                                                                   -->
    <img src="http://placehold.it/875x400&amp;text=No+-+JS+Chart+area+goes+here" alt="Chart title" width="875" height="400">

    <div class="chart-area__footer">
      <span class="chart-area__footer__label">Download custom data</span>

      <div class="chart-area__footer__actions">
        <a class="btn btn--primary btn--small" href="#">
          .csv
          <span class="icon-download icon--button-inline" role="presentation"></span>
        </a>
        <a class="btn btn--primary btn--small" href="#">
          .xsl
          <span class="icon-download icon--button-inline" role="presentation"></span>
        </a>
        <a class="btn btn--primary btn--small" href="#">
          Image
          <span class="icon-download icon--button-inline" role="presentation"></span>
        </a>
      </div>
    </div>
  </div>
